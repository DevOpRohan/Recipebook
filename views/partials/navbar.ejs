<style>
  .navbar {
    background-color: #343a40;
  }
  
  .navbar-brand {
    color: #ffffff;
  }
  
  .nav-link {
    color: #ffffff;
    transition: color 0.3s;
  }
  
  .nav-link:hover {
    color: #007bff;
    text-decoration: none;
  }
  
  .nav-icon {
    margin-right: 5px;
  }
  
  .profile-icon {
    font-size: 1.5rem;
  }

  .navbar-toggler-icon {
    filter: invert(100%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(100%) contrast(100%);
  }
</style>

<nav class="navbar navbar-expand-lg">
  <div class="container">
    <a class="navbar-brand" href="/">
      <img src="/assets/Logo1.png" alt="RecipeBook Logo" width="30" height="30" class="d-inline-block align-top">
      RecipeBook
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/"><i class="fas fa-home nav-icon"></i>Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/topics"><i class="fas fa-utensils nav-icon"></i>Topics</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/about"><i class="fas fa-info-circle nav-icon"></i>About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/help"><i class="fas fa-question-circle nav-icon"></i>Help</a>
        </li>
        <% if (user) { %>
          <li class="nav-item">
            <a class="nav-link" href="/recipes/my"><i class="fas fa-book nav-icon"></i>My Recipes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/favorites"><i class="fas fa-heart nav-icon"></i>Favorites</a>
          </li>
          <% if (!profileUser || (profileUser && profileUser._id.toString() === user._id.toString())) { %>
            <li class="nav-item">
              <a class="nav-link" href="/recipes/new"><i class="fas fa-plus nav-icon"></i>Create</a>
            </li>
          <% } %>
          <li class="nav-item">
            <a class="nav-link" href="/users/profile"><i class="fas fa-user profile-icon"></i> Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/logout"><i class="fas fa-sign-out-alt nav-icon"></i>Logout</a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/users/login"><i class="fas fa-sign-in-alt nav-icon"></i>Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/signup"><i class="fas fa-user-plus nav-icon"></i>Sign Up</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>